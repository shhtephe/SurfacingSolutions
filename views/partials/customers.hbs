<!DOCTYPE html>
<div class="jumbotron">
        <div class="container">
            <div class="col-xs-offset-2 col-xs-8">
			<div ng-controller="customersCtrl">
			<!--ng-init='customers=<%- JSON.stringify(data) %>; init()'-->
				Search by Name: <input type="text" ng-model="filter.search"><br><br>
				<ul>
					<li ng-repeat="customer in vm.customers | filter:filter.search">
						<a ng-href="/#/customer/{/customer.custCode/}">{/customer.companyName/} - {/customer.lastName/}, {/customer.firstName/} - {/customer.email/}</a>
					</li>
				</ul>
				<alert ng-repeat="alert in vm.alerts" type="{/alert.type{/" close="closeAlert($index)">{/alert.msg/}</alert>
			</div>
        </div>
    </div>
</div>