<!DOCTYPE html>
<div class="jumbotron">
  <div class="container">
    <div class="col-xs-offset-2 col-xs-8">
      <div class="container">
        <div ng-controller="registerCtrl">
          <h1>Register</h1>
          <p class="lead"></p><br/>
          <ng-form role="form" ng-submit="vm.submit(form)" id="userForm" name="userForm" style="max-width: 300px;">
            <div class="form-group">
              <input type="text" ng-model="userName" name="username" placeholder="Enter Username" class="form-control"/>
            </div>
            <div class="form-group">
              <input type="password" ng-model="password" name="password" placeholder="Password" class="form-control"/>
            </div>
            <div class="form-group">
              UserType: 
              <select name="accountType" ng-model="accountType">
                <option value="admin">Admin</option>
                <option value="user" selected>User</option>
              </select>
            </div>
            <div class="form-group">
              <input type="text" ng-model="email" name="email" placeholder="Email" class="form-control">
              <input type="text" ng-model="phoneNumber" name="phoneNumber" placeholder="Phone Number" class="form-control">
            </div>

            <button type="submit" class="btn btn-default">Submit</button>&nbsp;
            <a href="/">
              <button type="button" class="btn btn-primary">Cancel</button>
            </a>
          </form><br/>
          <!--{{error}} REPLACE WITH NG-ERROR-->
          <h4></h4>
        </div>
      </div>
    </div>
  </div>
</div>